<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_margin="5dp"
    android:background="#FFFFFF"
    android:layout_weight="1"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_weight="1"
        android:background="#fff"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/anh_SanPham"
            android:src="@drawable/sp7"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="190dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="190dp" />

        <TextView
            android:id="@+id/tv_ThongTinSP"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="#000"
            android:text="Kính Mắt Mèo CHốn Tia UV400 Phong Cách Hàn Quốc"
            android:layout_below="@+id/anh_SanPham"/>

        <TextView
            android:id="@+id/tv_giaban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ThongTinSP"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="10dp"
            android:text="đ49.607"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/tv_giakm"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/tv_giaban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#F34913"
            android:layout_marginBottom="10dp"
            android:text="đ25.795"/>

    </RelativeLayout>

</LinearLayout>
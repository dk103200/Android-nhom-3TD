<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#BFB5B3B3"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        app:cardElevation="8dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/logo" />

            <TextView
                android:layout_toRightOf="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:id="@+id/textView"
                android:text="MỸ PHẨM MA THUẬT"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/imageView"
                android:id="@+id/circleImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/logo" />

            <TextView
                android:layout_toRightOf="@+id/circleImage"
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="40dp"
                android:text="VN shoppe  "
                android:textColor="#676565"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/txtte"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="11:00 23 Th11 2020 "
                android:layout_below="@+id/circleImage"
                android:layout_toRightOf="@+id/imageView"
                android:textColor="#FF5722"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtnhacnho"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:text="674 Thiết lập nhắc nhở "
                android:layout_below="@+id/txtte"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="InvalidId" />

            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_below="@+id/circleImage"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:text="Nhắc tôi"
                android:textSize="12sp"
                app:backgroundTint="#FF5722" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>
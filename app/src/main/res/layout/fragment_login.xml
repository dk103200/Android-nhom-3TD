<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/login_dialog"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff">

    <RelativeLayout
        android:id="@+id/layout_toobar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rectangle_boder"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:padding="10dp"
            app:tint="@color/orange"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_back" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Đăng nhập"
            android:textSize="24sp"
            android:textColor="#000"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_logo"
        android:layout_below="@+id/layout_toobar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/shopee_logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/img_logo"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_user"
            android:inputType="text"
            android:maxLines="1"

            android:layout_width="match_parent"
            android:textSize="16sp"
            android:padding="10dp"
            android:drawablePadding="20dp"
            android:layout_height="wrap_content"
            app:tint="@color/icon_color"
            android:background="@null"
            android:drawableLeft="@drawable/ic_user"
            android:hint="Email/Số điện thoại/Tên đăng nhập"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_margin="5dp"
            android:background="#9F9F9F"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_pass"
                android:inputType="number"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableLeft="@drawable/ic_pass"
                android:drawableTint="@color/icon_color"
                android:padding="10dp"
                android:drawablePadding="20dp"
                android:hint="Mật khẩu"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_hiden"
                app:tint="@color/icon_color"
                android:padding="5dp"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="#919191"/>

            <TextView
                android:id="@+id/tv_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="#116BB3"
                android:text="Quên?"/>




        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_margin="5dp"
            android:background="#9F9F9F"/>
        <TextView

            android:id="@+id/bt_dangNhap"
            android:text="Đăng nhập"
            android:background="#EEE"
            android:textColor="@color/icon_color"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="#116BB3"
                android:text="Đăng ký"/>
            <TextView
                android:id="@+id/tv_login_sms"
                android:layout_marginRight="15dp"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="#116BB3"
                android:text="Đăng nhập bằng SMS"/>

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Hoặc"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0E94FF"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_margin="1dp"
                android:src="@drawable/logo_google"/>
            <TextView
                android:id="@+id/tv_login_gg"
                android:text="Tiếp tục với google"

                android:textColor="#fff"

                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0E94FF"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="4dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_border"
                android:src="@drawable/ic_facebook"/>
            <TextView
                android:id="@+id/tv_login_fb"
                android:text="Tiếp tục với Facebook"
                android:textColor="#fff"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
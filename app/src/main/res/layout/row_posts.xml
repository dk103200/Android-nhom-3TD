<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:paddingBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/top"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="15dp"
            android:id="@+id/cardView_Logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/img_LoGo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/logo_shopee"/>
         </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tenShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shopeevn"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:textColor="#000"
            android:layout_toRightOf="@+id/cardView_Logo"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            app:tint="@color/icon_color"
            android:src="@drawable/ic_more"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_Anh"
        android:layout_below="@id/top"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/post1"/>
    <RelativeLayout
        android:layout_below="@id/img_Anh"
        android:id="@+id/bottom"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp">
        <ImageView
            android:layout_marginRight="5dp"
            android:layout_marginLeft="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/img_Like"
            android:layout_centerVertical="true"
            app:tint="@color/icon_color"
            android:src="@drawable/ic_heart"/>
        <TextView
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_Like"
            android:id="@+id/text_Like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"/>
        <ImageView
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/text_Like"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/img_Cmt"
            app:tint="@color/icon_color"
            android:src="@drawable/ic_chat"/>
        <TextView
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_Cmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            android:id="@+id/text_Cmt"/>
        <ImageView
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/text_Cmt"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/img_View"
            app:tint="@color/icon_color"
            android:src="@drawable/ic_view"/>
        <TextView
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_View"
            android:text="200.000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_View"/>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_share2"
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:tint="@color/icon_color"
            android:id="@+id/img_Share"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/CMT"
        android:background="#fff"
        android:layout_below="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="15dp"
            android:id="@+id/cardView_TK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/img_TK"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/profile"/>
        </androidx.cardview.widget.CardView>
        <EditText
            android:id="@+id/cmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cardView_TK"
            android:hint="Thêm Bình luận..."
            android:background="@null"
            android:textSize="16sp"
            android:inputType="text"
            android:layout_centerVertical="true"
            android:importantForAutofill="no"
            />
    </RelativeLayout>
</RelativeLayout>
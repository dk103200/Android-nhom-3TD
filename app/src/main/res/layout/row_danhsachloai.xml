<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_centerHorizontal="true"
        android:id="@+id/cardview_danhsach"

        android:layout_width="42dp"
        android:layout_height="42dp"
        app:cardCornerRadius="21dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#D1D0D0"
            android:layout_height="match_parent">
            <ImageView
                android:padding="10dp"
                android:id="@+id/anh_Loai"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/sale" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_Ten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VOUCHER"
        android:textSize="8sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@+id/cardview_danhsach"
        />
    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_MoTa"
        android:textSize="8sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NGẤT NGÂY"
        android:layout_marginTop="2dp"
        android:textColor="#0E0808"
        android:layout_below="@+id/tv_Ten"
        />


</RelativeLayout>